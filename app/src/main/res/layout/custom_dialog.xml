<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/edit_dialog_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="17"
            android:gravity="center"
            android:text="신고하기"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/exitAddTrial"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center|end"
            android:layout_weight="1"
            android:background="@drawable/background_default"
            android:scaleType="centerCrop"
            android:src="@drawable/exit" />
    </LinearLayout>

    <!--약간 띄우기-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:orientation="vertical"
        android:background="@drawable/square_white_background"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="해당 버튼을 누르면 다이얼 페이지로 이동합니다"
        android:textSize="15sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"/>

    <!--약간 띄우기-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:orientation="vertical"
        android:background="@drawable/square_white_background"/>

    <!--전화번호 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dial_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <!--번호 추가하기-->
    <Button
        android:id="@+id/phone_num_insert"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="25dp"
        android:layout_weight="1"
        android:background="@drawable/background_default"
        android:gravity="center"
        android:text="+ 번호 추가하기"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>