<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:padding="8dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_chat"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/sample_img" />



    <TextView
        android:id="@+id/tv_chat_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@id/profile_image_chat"
        android:background="@drawable/background_left_receiver"
        android:maxWidth="270dp"
        android:padding="14dp"
        android:text="text"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_chat_time_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_chat_received"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@id/tv_chat_received"
        android:alpha="0.5"
        android:text="9:00PM"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_chat_received"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="4dp"
        android:text="읽음"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        android:visibility="gone">

    </TextView>
</RelativeLayout>