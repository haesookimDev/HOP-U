<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/sky_background">


    <!--난이도-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="난이도 ★☆☆"
        android:textSize="20dp"
        android:textColor="@color/blue"
        android:gravity="center_horizontal|center_vertical"
        android:textStyle="bold"
        android:orientation="vertical"
        android:elevation="10dp"
        android:background="@drawable/square_white_background"/>
    <!--약간 띄우기-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical"
        android:background="@drawable/background_default"/>
    <!--푸코 이미지-->
    <ImageView
        android:layout_width="280dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:background="@drawable/puco_quiz_image"/>
    <!--약간 띄우기-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical"
        android:background="@drawable/background_default"/>
    <!--퀴즈 문제 ox칸-->
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:elevation="16dp"
        android:background="@drawable/quiz_square">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="단톡방에서 나가도 계속 초대한 뒤 욕을 하는 행위는 사이버 폭력이 아니다."
            android:textSize="15dp"
            android:textColor="@color/black"
            android:background="@drawable/background_default"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center">
            <Button
                android:id="@+id/btn_frag1_o"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="O"
                android:textSize="45dp"
                android:background="@drawable/quiz_button_o"/>
            <Button
                android:id="@+id/btn_frag1_x"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="X"
                android:textSize="45dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/quiz_button_x" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>