<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@android:color/white">

    <!--약간 띄우기-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:orientation="vertical"
        android:background="@drawable/square_white_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!--사진-->
        <ImageView
            android:id="@+id/whostalk_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"/>
        <!--텍스트-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/whostalk_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="TITLE"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <!--약간 띄우기-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:orientation="vertical"
                android:background="@drawable/square_white_background"/>

            <TextView
                android:id="@+id/whostalk_subtitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="content"
                android:textSize="15sp"
                android:textColor="@android:color/black"/>
            <!--약간 띄우기-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:orientation="vertical"
                android:background="@drawable/square_white_background"/>
            <TextView
                android:id="@+id/whostalk_day"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="content"
                android:textSize="13sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
    </LinearLayout>
    <!--약간 띄우기-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:orientation="vertical"
        android:background="@drawable/square_white_background"/>
    <!--아이템마다 구분선-->
   <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/whiteandgray"/>
</LinearLayout>
